// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgres"
  url               = env("POSTGRESS_PRISMA_URL") // uses connection pooling
  directUrl         = env("POSTGRESS_URL_NON_POOLING") // uses a direct connection
  shadowDatabaseUrl = env("POSTGRESS_URL_NON_POOLING") // used for migrations
}

model Blog {
  id        String   @id @default(uuid())
  title     String
  text      String   @db.VarChar(10000)
  imageUrl  String
  author    String
  createdAt DateTime @default(now())
  category  String
}
